<div>
  <div>
    <h1>
      List of users
    </h1>
  </div>
</div>


<div>
  <div>
    <table border="1">
      <tr>
        <th>
          Username
        </th>

    <th>
      Private?
    </th>

    <th></th>

    <% if @current_user != nil %>
    <th></th>
    <% end %>

  </tr>

    <tr>
    <% @list_of_users.each do |a_user| %>
      <td>
        <%= a_user.username %>
      </td>

      <td>
        <%= humanize_boolean(a_user.private) %>
      </td>

    <% if @current_user != nil %>
      <td>
        <form action="/insert_follow_request" method="post">
          <input type="hidden" id="recipient_id_box" name="query_recipient_id" value="<% a_user.id %>">

          <input type="hidden" id="sender_id_box" name="query_sender_id" value="<% @current_user.id %>">

          <input type="hidden" id="status_box" name="query_status" value="<%# @the_follow_request.status %>">

          <button>
            Follow
          </button>
        </form>
      </td>
      <% end %>

      <!--<td>
        Request sent.

        <a href="/delete_follow_request/2355">
          Cancel
        </a>
      </td>-->

      <td>
        <a href="/users/<%= a_user.id %>">Show details</a>
      </td>
    </tr>
    <% end %>
  </div>  
</div>  
