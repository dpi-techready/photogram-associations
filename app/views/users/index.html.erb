<div>
  <div>
    <h1>
      List of users
    </h1>
  </div>
</div>

<div>
  <div>
    <table border="1">
      <tr>
        <th>
          Username
        </th>

        <th>
          Privare?
        </th>

        <th></th>

        <% if @current_user != nil %>
        <th></th>
        <% end %>

      </tr>

      <% @list_of_users.each do |a_user| %>
      <tr>
        <td>
          <%= a_user.username %>
        </td>

        <td>
          <!--<%= a_user.private %>-->
          <%= humanize_boolean(a_user.private) %>
        </td>

        <% if @current_user != nil %>
        <td>
          <form action="/insert_follow_request/<% a_user.id %>" method="post">
              <input type="hidden" name="query_recipient_id" value="<% a_user.id %>">

              <button>
                Follow
              </button>
            </form>
        </td>
        <!-- make this status and follow button show conditionally -->
        <!--<td>
            Request sent.
        <a href="/delete_follow_request/<% a_user.id %>">Cancel</a>
        </td>-->
        <% end %>

        <td>
          <a href="/users/<%= a_user.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
